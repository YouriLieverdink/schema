{
  "name": "whocooks",
  "description": "Save recipes and share with family & friends.",

  "imports": [
    { "uri": "https://app.apibuilder.io/iruoy/common/0.0.2/service.json" }
  ],

  "models": {
    "ingredient": {
      "fields": [
        { "name": "title", "type": "string" },
        { "name": "amount", "type": "double" },
        { "name": "unit", "type": "string", "required": false }
      ]
    },

    "recipe": {
      "fields": [
        { "name": "id", "type": "uuid" },
        { "name": "photo_url", "type": "string", "required": false },
        { "name": "title", "type": "string" },
        { "name": "description", "type": "string", "required": false },
        { "name": "ingredients", "type": "[ingredient]" }
      ],
      "attributes": [
        {
          "name": "mongo",
          "value": {
            "_id": "id",
            "indexes": ["title"]
          }
        }
      ]
    },

    "recipe_form": {
      "fields": [
        { "name": "photo_url", "type": "string", "required": false },
        { "name": "title", "type": "string" },
        { "name": "description", "type": "string", "required": false },
        { "name": "ingredients", "type": "[ingredient]" }
      ]
    },

    "schedule": {
      "fields": [
        { "name": "id", "type": "string" },
        { "name": "date", "type": "date-iso8601" },
        { "name": "monday", "type": "recipe", "required": false },
        { "name": "tuesday", "type": "recipe", "required": false },
        { "name": "wednesday", "type": "recipe", "required": false },
        { "name": "thursday", "type": "recipe", "required": false },
        { "name": "friday", "type": "recipe", "required": false },
        { "name": "saturday", "type": "recipe", "required": false },
        { "name": "sunday", "type": "recipe", "required": false }
      ],
      "attributes": [
        {
          "name": "mongo",
          "value": {
            "_id": "id",
            "indexes": ["date"]
          }
        }
      ]
    }
  },

  "resources": {
    "nl.iruoy.common.v0.models.healthcheck": {
      "path": "/_internal_",
      "operations": [
        {
          "method": "GET",
          "path": "/healthcheck",
          "responses": {
            "200": { "type": "nl.iruoy.common.v0.models.healthcheck" },
            "422": { "type": "nl.iruoy.common.v0.models.error" }
          }
        }
      ]
    },

    "recipe": {
      "path": "/recipes",
      "operations": [
        {
          "method": "GET",
          "parameters": [
            { "name": "limit", "type": "integer", "default": 100 },
            { "name": "skip", "type": "integer", "default": 0 }
          ],
          "responses": {
            "200": { "type": "[recipe]" }
          }
        },
        {
          "method": "POST",
          "body": { "type": "recipe_form" },
          "responses": {
            "201": { "type": "recipe" },
            "400": { "type": "nl.iruoy.common.v0.models.error" }
          }
        },
        {
          "method": "PUT",
          "path": "/:id",
          "body": { "type": "recipe_form" },
          "responses": {
            "200": { "type": "recipe" },
            "400": { "type": "nl.iruoy.common.v0.models.error" },
            "404": { "type": "unit" }
          }
        },
        {
          "method": "DELETE",
          "path": "/:id",
          "responses": {
            "204": { "type": "unit" },
            "404": { "type": "unit" }
          }
        }
      ]
    },

    "schedule": {
      "path": "/schedules",
      "operations": [
        {
          "method": "GET",
          "parameters": [{ "name": "date", "type": "date-iso8601" }],
          "responses": {
            "200": { "type": "schedule" }
          }
        },
        {
          "method": "PUT",
          "parameters": [{ "name": "date", "type": "date-iso8601" }],
          "body": { "type": "schedule" },
          "responses": {
            "200": { "type": "schedule" }
          }
        }
      ]
    }
  }
}
