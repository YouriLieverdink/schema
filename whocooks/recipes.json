{
  "name": "whocooks-recipes",
  "description": "The models and resources associated with recipes.",

  "imports": [
    {
      "uri": "https://app.apibuilder.io/iruoy/whocooks-common/0.0.4-dev/service.json"
    }
  ],

  "models": {
    "recipe": {
      "description": "A recipe created by the user.",
      "fields": [
        { "name": "id", "type": "uuid" },
        { "name": "title", "type": "string" },
        { "name": "photo_url", "type": "string", "required": false },
        { "name": "description", "type": "string", "required": false },
        { "name": "ingredients", "type": "[string]" }
      ],
      "attributes": [
        {
          "name": "mongo",
          "value": {
            "_id": "id"
          }
        }
      ]
    },
    "recipe_form": {
      "description": "Used to create a recipe",
      "fields": [
        { "name": "title", "type": "string" },
        { "name": "photo_url", "type": "string", "required": false },
        { "name": "description", "type": "string", "required": false },
        { "name": "ingredients", "type": "[string]" }
      ]
    }
  },

  "resources": {
    "iruoy.whocooks.common.v0.models.healthcheck": {
      "path": "/_internal_",
      "operations": [
        {
          "method": "GET",
          "description": "Retrieve the status of the service.",
          "path": "/healthcheck",
          "responses": {
            "200": { "type": "iruoy.whocooks.common.v0.models.healthcheck" },
            "500": { "type": "iruoy.whocooks.common.v0.models.error" }
          }
        }
      ]
    },

    "recipe": {
      "path": "/recipes",
      "description": "Endpoint for managing the recipe resource.",
      "operations": [
        {
          "method": "GET",
          "description": "List all recipes.",
          "parameters": [
            { "name": "skip", "type": "integer", "default": 0 },
            { "name": "limit", "type": "integer", "default": 25 }
          ],
          "responses": {
            "200": { "type": "[recipe]" },
            "401": { "type": "unit" }
          }
        },
        {
          "method": "POST",
          "description": "Add a recipe.",
          "body": { "type": "recipe_form" },
          "responses": {
            "200": { "type": "recipe" },
            "400": {
              "type": "[iruoy.whocooks.common.v0.models.validation_error]"
            },
            "401": { "type": "unit" }
          }
        },
        {
          "method": "PUT",
          "description": "Edit a recipe.",
          "path": "/:id",
          "body": { "type": "recipe_form" },
          "responses": {
            "200": { "type": "recipe" },
            "400": {
              "type": "[iruoy.whocooks.common.v0.models.validation_error]"
            },
            "401": { "type": "unit" },
            "404": { "type": "unit" }
          }
        },
        {
          "method": "DELETE",
          "description": "Remove a recipe.",
          "path": "/:id",
          "responses": {
            "204": { "type": "unit" },
            "401": { "type": "unit" },
            "404": { "type": "unit" }
          }
        }
      ]
    }
  }
}
